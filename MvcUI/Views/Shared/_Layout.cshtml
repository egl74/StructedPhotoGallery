<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
@RenderSection("Styles", false)
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Online Photo Gallery</h1>
            </div>
            <nav>
                <ul id="menu">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    @if (HttpContext.Current.User.IsInRole("Администратор"))
                    {
                        <li>@Html.ActionLink("Администрирование", "Index", "User", routeValues: null, htmlAttributes: new { id = "username", title = "Manage", @class="page" })</li>
                    }
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li>@Html.ActionLink("Загрузка 1", "UploadImage", "Home")</li>
                    <li>@Html.ActionLink("Загрузка 2", "UploadImageModal", "Home")</li>
                    @if (HttpContext.Current.User.IsInRole("Администратор"))
                    {
                        <li>@Html.ActionLink("Мои фото", "Files", "User", routeValues: null, htmlAttributes: new { id = "username", title = "Manage", @class="page" })</li>
                    }
                    @if (HttpContext.Current.User.IsInRole("Пользователь"))
                    {
                        <li>@Html.ActionLink("Мои фото", "Files", "User", routeValues: null, htmlAttributes: new { id = "username", title = "Manage", @class="page" })</li>
                    }
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>
@RenderSection("Scripts", false)
</body>
</html>
